{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "build/**"
            ],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "cache": true
        },
        "lint": {
            "dependsOn": [
                "^build"
            ],
            "cache": true
        },
        "clean": {
            "cache": false
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "cache": true
        }
    }
}