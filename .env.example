# FashionDeck Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# LLM API Keys (Required for ML Service)
# ============================================

# OpenAI API Key (for GPT-4o-mini - prompt parsing and planning)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude 3 Haiku - outfit scoring)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# Marketplace Affiliate Keys (Required for Backend)
# ============================================

# Amazon India Affiliate Program
AMAZON_AFFILIATE_TAG=your-amazon-affiliate-tag
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key

# Flipkart Affiliate Program
FLIPKART_AFFILIATE_ID=your-flipkart-affiliate-id
FLIPKART_AFFILIATE_TOKEN=your-flipkart-affiliate-token

# ============================================
# Database Configuration (Auto-configured for local dev)
# ============================================

# PostgreSQL (Docker Compose sets these automatically)
DATABASE_URL=postgresql://fashiondeck:fashiondeck_dev_password@localhost:5432/fashiondeck

# Redis (Docker Compose sets these automatically)
REDIS_URL=redis://localhost:6379

# ============================================
# Service URLs (for local development)
# ============================================

# Backend API URL (used by frontend)
NEXT_PUBLIC_API_URL=http://localhost:3001

# ML Service URL (used by backend)
ML_SERVICE_URL=http://localhost:8000

# ============================================
# Optional Configuration
# ============================================

# Node Environment
NODE_ENV=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable Sentry Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Enable Analytics (optional)
# GOOGLE_ANALYTICS_ID=your-ga-id-here
