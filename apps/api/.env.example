# FashionDeck Backend API Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================

NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection string
DATABASE_URL=postgresql://fashiondeck:fashiondeck_dev_password@localhost:5432/fashiondeck

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Redis Configuration
# ============================================

REDIS_URL=redis://localhost:6379
REDIS_TTL_PRODUCTS=21600
REDIS_TTL_PROMPTS=86400

# ============================================
# ML Service Configuration
# ============================================

ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_TIMEOUT=5000

# ============================================
# Marketplace API Keys
# ============================================

# Amazon India Affiliate
AMAZON_AFFILIATE_TAG=your-amazon-affiliate-tag
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_REGION=in

# Flipkart Affiliate
FLIPKART_AFFILIATE_ID=your-flipkart-affiliate-id
FLIPKART_AFFILIATE_TOKEN=your-flipkart-affiliate-token

# ============================================
# Rate Limiting
# ============================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# ============================================
# CORS Configuration
# ============================================

CORS_ORIGIN=http://localhost:3000

# ============================================
# Optional: Monitoring & Error Tracking
# ============================================

# Sentry DSN (optional)
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Enable request logging
ENABLE_REQUEST_LOGGING=true
